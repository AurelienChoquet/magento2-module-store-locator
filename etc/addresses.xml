<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Smile_StoreLocator:etc/addresses.xsd">
    <format name="default">
        <line>
            <element type="attribute" name="street"/>
        </line>
        <line>
            <element type="attribute" name="postcode"/>
            <element type="attribute" name="city"/>
        </line>
        <line>
            <element type="attribute" name="contact_phone"/>
        </line>
        <line>
            <element type="attribute" name="contact_email"/>
        </line>
    </format>

    <format name="short">
        <line>
            <element type="attribute" name="street"/>
        </line>
        <line>
            <element type="attribute" name="postcode"/>
            <element type="attribute" name="city"/>
        </line>
        <line>
            <element type="attribute" name="contact_phone"/>
        </line>
    </format>
</config>
